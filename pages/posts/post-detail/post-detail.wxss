/* pages/posts/post-detail/post-detail.wxss */

.container {
  display: flex;
  flex-direction: column;
}

.header-img {
  width: 100%;
  height: 460rpx;
}

.audio {
  position: absolute;
  left: 50%;
  top: 180rpx;
  transform: translateX(-50%);
  width: 102rpx;
  height: 110rpx;
  opacity: 0.6;
}

.author-date {
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 20rpx;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
}

.author {
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 30rpx;
  vertical-align: middle;
  color: #666;
}

.const-text {
  font-size: 24rpx;
  color: #999;
  margin-left: 16rpx;
}

.date {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

.title {
  font-size: 36rpx;
  margin-left: 40rpx;
  margin-top: 30rpx;
  font-weight: 700;
  letter-spacing: 2rpx;
  color: #4b556c;
}

.tool {
  margin-top: 20rpx;
}

.circle-img {
  float: right;
  margin-right: 20rpx;
}

.circle-img image {
  width: 90rpx;
  height: 90rpx;
}

.share-img {
  margin-left: 20rpx;
}

.horizon {
  position: relative;
  top: 46rpx;
  z-index: -99;
  height: 2rpx;
  width: 660rpx;
  margin: 0 auto;
  background-color: #e5e5e5;
  vertical-align: middle;
}

.detail {
  color: #666;
  margin: 10px 20px 0 20px;
  line-height: 44rpx;
  letter-spacing: 2rpx;
  padding-bottom: 20rpx;
}
