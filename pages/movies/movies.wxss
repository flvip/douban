/* pages/movies/movies.wxss */
@import 'movie-list/movie-list-template.wxss';
@import 'movie-grid/movie-grid-template.wxss';
.container{
  background-color: #f2f2f2;
}
.movies-template{
  margin-bottom: 30rpx;
}
.search{
  display: flex;
  background-color: #f2f2f2;
  width: 100%;
  height: 80rpx;
}
.search input{
  height: 100%;
  width: 600rpx;
  margin-left: 10rpx;
  font-size: 28rpx;
}
.search-img{
  margin: auto 14rpx auto 20rpx;
}
.placeholder{
  font-size: 26rpx;
  color: #d1d1d1;
  margin-left: 20rpx;
}
.cancelImg{
  width: 30rpx;
  height: 30rpx;
  margin: auto 14rpx auto 20rpx;
}
.searchPanel{
  position: absolute;
  top: 80rpx;
}